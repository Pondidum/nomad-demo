Vagrant.configure(2) do |config|
  config.vm.box = "local/nomad"

  config.vm.provider "hyperv" do |h|
    h.memory = "1024"
    h.linked_clone = true
  end

  config.vm.define "n1" do |n1|
    n1.vm.hostname = "nomad1"
    n1.vm.provision "shell", path: "./scripts/server.sh", privileged: false

    n1.trigger.after :up do |trigger|
      trigger.info  = "writing out ip address"
      trigger.run_remote = { inline: "ip route get 1 | awk '{print $NF;exit}' > /vagrant/server_ip" }
    end
  end

  config.vm.define "n2" do |n2|
    n2.vm.hostname = "nomad2"
    n2.vm.provision "shell", path: "./scripts/client.sh", privileged: false
  end

  config.vm.define "n3" do |n3|
    n3.vm.hostname = "nomad3"
    n3.vm.provision "shell", path: "./scripts/client.sh", privileged: false
  end

end
